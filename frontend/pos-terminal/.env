PORT=8080
# Application settings
REACT_APP_NAME=POS Terminal
REACT_APP_VERSION=1.0.0

# API settings
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_API_TIMEOUT=10000
REACT_APP_USE_MOCK_API=false  # Changed to false to use real API

# Auth settings
REACT_APP_AUTH_STORAGE_KEY=pos_auth
REACT_APP_AUTH_TOKEN_EXPIRY=8 # hours

# Offline settings
REACT_APP_ENABLE_OFFLINE=true
REACT_APP_AUTO_SYNC_INTERVAL=5 # minutes
REACT_APP_SYNC_ON_CONNECTION=true

# Feature flags
REACT_APP_FEATURE_MULTI_STORE=true
REACT_APP_FEATURE_PRODUCT_CUSTOMIZATION=true
REACT_APP_FEATURE_KITCHEN_DISPLAY=false
REACT_APP_FEATURE_CUSTOMER_DISPLAY=false

# Tax settings
REACT_APP_DEFAULT_TAX_RATE=7.0 # percent

# Other settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_DEFAULT_STORE_ID=1